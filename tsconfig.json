{
    "compileOnSave": true,
    "compilerOptions": {
        "outDir": "build",
        "sourceMap": true,
        "target": "es6",
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/*"
            ]
        },
        "module": "commonjs"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "**/*.spec.ts"
    ]
}